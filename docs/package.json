{
  "name": "@rari/docs",
  "type": "module",
  "version": "0.1.0",
  "private": true,
  "description": "Runtime Accelerated Rendering Infrastructure (Rari) Documentation",
  "author": "Ryan Skinner",
  "license": "MIT",
  "scripts": {
    "build": "pnpm clean && pnpm typecheck && vite build",
    "dev": "NODE_OPTIONS='--max-http-header-size=1048576' vite",
    "start": "NODE_ENV=production rari start",
    "clean": "rm -rf .rari && rm -rf dist",
    "lint": "oxlint && eslint",
    "lint:fix": "oxlint --fix && eslint --fix",
    "typecheck": "tsgo"
  },
  "dependencies": {
    "markdown-it": "^14.1.0",
    "rari": "workspace:*",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "shiki": "^3.14.0"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.16",
    "@types/markdown-it": "^14.1.2",
    "@types/node": "^24.9.2",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@typescript/native-preview": "7.0.0-dev.20250923.1",
    "@vitejs/plugin-react-oxc": "^0.2.3",
    "eslint": "^9.38.0",
    "oxlint": "^1.25.0",
    "rolldown-vite": "^7.1.20",
    "tailwindcss": "^4.1.16"
  }
}
