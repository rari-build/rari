{
  "name": "@rari/docs",
  "type": "module",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@10.27.0",
  "description": "Runtime Accelerated Rendering Infrastructure (Rari) Documentation",
  "author": "Ryan Skinner",
  "license": "MIT",
  "engines": {
    "node": "24"
  },
  "scripts": {
