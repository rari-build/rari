{
  "name": "@rari/monorepo",
  "type": "module",
  "private": true,
  "packageManager": "pnpm@10.30.0",
  "scripts": {
    "build": "pnpm -r run build",
    "typecheck": "pnpm -r run typecheck",
    "clean": "pnpm -r run clean",
    "lint": "pnpm -r run lint && oxlint crates/ && eslint crates/ packages/ web/ examples/ test/",
    "lint:fix": "pnpm -r run lint:fix && oxlint crates/ --fix && eslint crates/ packages/ web/ examples/ test/ --fix",
    "lint:knip": "knip",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "@antfu/eslint-config": "catalog:eslint",
    "@e18e/eslint-plugin": "catalog:eslint",
    "@eslint-react/eslint-plugin": "catalog:eslint",
    "@types/node": "catalog:typescript",
    "@typescript-eslint/utils": "catalog:eslint",
    "@typescript/native-preview": "catalog:typescript",
    "@vitest/coverage-v8": "catalog:testing",
    "eslint": "catalog:eslint",
    "eslint-plugin-de-morgan": "catalog:eslint",
    "eslint-plugin-oxlint": "catalog:eslint",
    "eslint-plugin-react-hooks": "catalog:eslint",
    "eslint-plugin-react-refresh": "catalog:eslint",
    "knip": "catalog:eslint",
    "oxlint": "catalog:eslint",
    "vitest": "catalog:testing"
  }
}
