{
  "name": "@rari/monorepo",
  "type": "module",
  "private": true,
  "packageManager": "pnpm@10.28.0",
  "scripts": {
    "build": "pnpm -r run build",
    "typecheck": "pnpm -r run typecheck",
    "clean": "pnpm -r run clean",
    "lint": "pnpm -r run lint && oxlint crates/ && eslint .",
    "lint:fix": "pnpm -r run lint:fix && oxlint crates/ --fix && eslint . --fix",
    "changelog": "git-cliff --output CHANGELOG.md",
    "changelog:preview": "git-cliff --unreleased",
    "changelog:latest": "git-cliff --latest",
    "release": "cargo run --release --manifest-path tools/release/Cargo.toml --bin release",
    "release:dry": "cargo run --release --manifest-path tools/release/Cargo.toml --bin release -- --dry-run",
    "prepare-binaries": "cargo run --release --manifest-path tools/prepare-binaries/Cargo.toml --bin prepare-binaries",
    "postinstall": "pnpm build"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^7.0.1",
    "@eslint-react/eslint-plugin": "^2.7.1",
    "@types/node": "^25.0.9",
    "@typescript/native-preview": "^7.0.0-dev.20260116.1",
    "eslint": "^9.39.2",
    "eslint-plugin-oxlint": "^1.39.0",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.26",
    "oxlint": "^1.39.0"
  }
}
