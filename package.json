{
  "name": "@rari/monorepo",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "pnpm -r run build",
    "typecheck": "pnpm -r run typecheck",
    "clean": "pnpm -r run clean",
    "lint": "pnpm -r run lint && oxlint crates/ && eslint crates/",
    "lint:fix": "pnpm -r run lint:fix && oxlint crates/ --fix && eslint crates/ --fix",
    "changelog": "pnpm exec git-cliff --output CHANGELOG.md",
    "changelog:preview": "pnpm exec git-cliff --unreleased",
    "changelog:latest": "pnpm exec git-cliff --latest",
    "release": "node scripts/release.js",
    "release:dry": "node scripts/release.js --skip-prompts",
    "prepare-binaries": "node scripts/prepare-binaries.js"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^6.1.0",
    "@clack/prompts": "^0.11.0",
    "@eslint-react/eslint-plugin": "^2.2.4",
    "@types/node": "^24.9.2",
    "eslint": "^9.38.0",
    "eslint-plugin-oxlint": "^1.24.0",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "execa": "^9.6.0",
    "git-cliff": "^2.10.1",
    "oxlint": "^1.25.0",
    "picocolors": "^1.1.1",
    "semver": "^7.7.3",
    "typescript": "^5.9.3"
  }
}
