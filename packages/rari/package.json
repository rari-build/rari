{
  "name": "rari",
  "type": "module",
  "version": "0.9.0",
  "description": "Runtime Accelerated Rendering Infrastructure (rari)",
  "author": "Ryan Skinner",
  "license": "MIT",
  "homepage": "https://github.com/rari-build/rari#readme",
  "repository": {
    "directory": "packages/rari",
    "type": "git",
    "url": "https://github.com/rari-build/rari.git"
  },
  "bugs": {
    "url": "https://github.com/rari-build/rari/issues"
  },
  "keywords": [
    "react",
    "server-components",
    "rsc",
    "rust",
    "vite",
    "framework",
    "performance",
    "ssr",
    "typescript",
    "deno",
    "v8",
    "streaming",
    "fast",
    "zero-config",
    "full-stack",
    "web-framework"
  ],
  "exports": {
    ".": {
      "browser": "./dist/client.mjs",
      "node": "./dist/vite.mjs",
      "types": "./dist/vite.d.mts",
      "default": "./dist/vite.mjs"
    },
    "./client": {
      "types": "./dist/client.d.mts",
      "default": "./dist/client.mjs"
    },
    "./image": {
      "types": "./dist/image/index.d.mts",
      "default": "./dist/image/index.mjs"
    },
    "./mdx": {
      "types": "./dist/mdx.d.mts",
      "default": "./dist/mdx.mjs"
    },
    "./og": {
      "types": "./dist/og/index.d.mts",
      "default": "./dist/og/index.mjs"
    },
    "./package.json": "./package.json",
    "./runtime/actions": {
      "types": "./dist/runtime/actions.d.mts",
      "default": "./dist/runtime/actions.mjs"
    },
    "./runtime/entry-client": {
      "types": "./dist/runtime/entry-client.d.mts",
      "default": "./dist/runtime/entry-client.mjs"
    },
    "./runtime/react-server-dom-rari-client": {
      "types": "./dist/runtime/react-server-dom-rari-client.d.mts",
      "default": "./dist/runtime/react-server-dom-rari-client.mjs"
    },
    "./runtime/react-server-dom-shim": {
      "types": "./dist/runtime/react-server-dom-shim.d.mts",
      "default": "./dist/runtime/react-server-dom-shim.mjs"
    },
    "./runtime/rsc-client-runtime": {
      "types": "./dist/runtime/rsc-client-runtime.d.mts",
      "default": "./dist/runtime/rsc-client-runtime.mjs"
    },
    "./vite": {
      "types": "./dist/vite.d.mts",
      "default": "./dist/vite.mjs"
    },
    "./*.mjs": "./dist/*.mjs"
  },
  "types": "dist/index.d.mts",
  "bin": {
    "rari": "./dist/cli.mjs"
  },
  "files": [
    "LICENSE",
    "README.md",
    "dist"
  ],
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "build": "pnpm clean && pnpm typecheck && tsdown",
    "clean": "rm -rf dist",
    "lint": "oxlint",
    "lint:fix": "oxlint --fix",
    "typecheck": "tsgo"
  },
  "peerDependencies": {
    "react": "^19.2.4",
    "react-dom": "^19.2.4"
  },
  "dependencies": {
    "rolldown": "catalog:build"
  },
  "optionalDependencies": {
    "rari-darwin-arm64": "0.9.1",
    "rari-darwin-x64": "0.9.1",
    "rari-linux-arm64": "0.9.1",
    "rari-linux-x64": "0.9.1",
    "rari-win32-x64": "0.9.1"
  },
  "devDependencies": {
    "@rari/deploy": "workspace:*",
    "@rari/logger": "workspace:*",
    "@types/node": "catalog:typescript",
    "@types/react": "catalog:react",
    "@types/react-dom": "catalog:react",
    "@typescript/native-preview": "catalog:typescript",
    "oxlint": "catalog:eslint",
    "rolldown-vite": "catalog:build",
    "tsdown": "catalog:build"
  }
}
