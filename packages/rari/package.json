{
  "name": "rari",
  "type": "module",
  "version": "0.7.8",
  "description": "Runtime Accelerated Rendering Infrastructure (rari)",
  "author": "Ryan Skinner",
  "license": "MIT",
  "homepage": "https://github.com/rari-build/rari#readme",
  "repository": {
    "directory": "packages/rari",
    "type": "git",
    "url": "https://github.com/rari-build/rari.git"
  },
  "bugs": {
    "url": "https://github.com/rari-build/rari/issues"
  },
  "keywords": [
    "react",
    "server-components",
    "rsc",
    "rust",
    "vite",
    "framework",
    "performance",
    "ssr",
    "typescript",
    "deno",
    "v8",
    "streaming",
    "fast",
    "zero-config",
    "full-stack",
    "web-framework"
  ],
  "exports": {
    ".": {
      "browser": "./dist/client.mjs",
      "node": "./dist/vite.mjs",
      "types": "./dist/vite.d.mts",
      "default": "./dist/vite.mjs"
    },
    "./client": {
      "types": "./dist/client.d.mts",
      "default": "./dist/client.mjs"
    },
    "./image": {
      "types": "./dist/image/index.d.mts",
      "default": "./dist/image/index.mjs"
    },
    "./mdx": {
      "types": "./dist/mdx.d.mts",
      "default": "./dist/mdx.mjs"
    },
    "./og": {
      "types": "./dist/og/index.d.mts",
      "default": "./dist/og/index.mjs"
    },
    "./package.json": "./package.json",
    "./runtime/actions": {
      "types": "./dist/runtime/actions.d.mts",
      "default": "./dist/runtime/actions.mjs"
    },
    "./vite": {
      "types": "./dist/vite.d.mts",
      "default": "./dist/vite.mjs"
    }
  },
  "types": "dist/index.d.mts",
  "bin": {
    "rari": "./dist/cli.mjs"
  },
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "pnpm clean && pnpm typecheck && tsdown",
    "clean": "rm -rf dist",
    "lint": "oxlint",
    "lint:fix": "oxlint --fix",
    "typecheck": "tsgo"
  },
  "peerDependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "dependencies": {
    "esbuild": "^0.27.2",
    "picocolors": "^1.1.1"
  },
  "optionalDependencies": {
    "rari-darwin-arm64": "0.7.8",
    "rari-darwin-x64": "0.7.8",
    "rari-linux-arm64": "0.7.8",
    "rari-linux-x64": "0.7.8",
    "rari-win32-x64": "0.7.8"
  },
  "devDependencies": {
    "@types/node": "^25.0.10",
    "@types/react": "^19.2.9",
    "@typescript/native-preview": "^7.0.0-dev.20260123.3",
    "chokidar": "^5.0.0",
    "oxlint": "^1.41.0",
    "rolldown-vite": "^7.3.1",
    "tsdown": "^0.18.4"
  }
}
