{
  "name": "rari",
  "type": "module",
  "version": "0.3.0",
  "description": "Runtime Accelerated Rendering Infrastructure (Rari)",
  "author": "Ryan Skinner",
  "license": "MIT",
  "homepage": "https://github.com/rari-build/rari#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/rari-build/rari.git",
    "directory": "packages/rari"
  },
  "bugs": {
    "url": "https://github.com/rari-build/rari/issues"
  },
  "keywords": [
    "react",
    "server-components",
    "rsc",
    "rust",
    "vite",
    "framework",
    "performance",
    "ssr",
    "typescript",
    "deno",
    "v8",
    "streaming",
    "fast",
    "zero-config",
    "full-stack",
    "web-framework"
  ],
  "exports": {
    ".": {
      "types": "./dist/server.d.ts",
      "browser": "./dist/client.js",
      "node": "./dist/server.js",
      "default": "./dist/server.js"
    },
    "./client": {
      "types": "./dist/client.d.ts",
      "default": "./dist/client.js"
    },
    "./server": {
      "types": "./dist/server.d.ts",
      "default": "./dist/server.js"
    },
    "./runtime/actions": {
      "types": "./dist/runtime/actions.d.ts",
      "default": "./dist/runtime/actions.js"
    },
    "./runtime/AppRouterHMRProvider": {
      "types": "./dist/runtime/AppRouterHMRProvider.d.ts",
      "default": "./dist/runtime/AppRouterHMRProvider.js"
    },
    "./hooks/useActionState": {
      "types": "./dist/hooks/useActionState.d.ts",
      "default": "./dist/hooks/useActionState.js"
    },
    "./package.json": "./package.json"
  },
  "types": "dist/index.d.ts",
  "bin": {
    "rari": "./dist/cli.js"
  },
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "pnpm clean && pnpm typecheck && tsdown",
    "typecheck": "tsgo",
    "clean": "rm -rf dist",
    "lint": "oxlint && eslint",
    "lint:fix": "oxlint --fix && eslint --fix"
  },
  "peerDependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "dependencies": {
    "acorn": "^8.15.0",
    "esbuild": "^0.25.11",
    "picocolors": "^1.1.1"
  },
  "optionalDependencies": {
    "rari-darwin-arm64": "0.3.0",
    "rari-darwin-x64": "0.3.0",
    "rari-linux-arm64": "0.3.0",
    "rari-linux-x64": "0.3.0",
    "rari-win32-x64": "0.3.0"
  },
  "devDependencies": {
    "@types/node": "^24.9.1",
    "@types/react": "^19.2.2",
    "@typescript/native-preview": "7.0.0-dev.20250923.1",
    "chokidar": "^4.0.3",
    "eslint": "^9.38.0",
    "oxlint": "^1.23.0",
    "rolldown-vite": "^7.1.19",
    "tsdown": "^0.15.9"
  }
}
