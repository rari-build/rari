{
  "$schema": "https://unpkg.com/knip@latest/schema.json",
  "ignoreBinaries": ["git-cliff"],
  "workspaces": {
    ".": {
      "ignore": [
        "crates/**/*"
      ]
    },
    "packages/rari": {
      "entry": [
        "src/**/*.ts"
      ],
      "project": [
        "src/**/*.{ts,tsx,js,jsx}"
      ],
      "ignore": [
        "src/runtime/AppRouterProvider.tsx",
        "src/runtime/entry-client.js",
        "src/runtime/LoadingErrorBoundary.tsx",
        "src/runtime/react-server-dom-rari-client.js",
        "src/runtime/react-server-dom-shim.js",
        "src/runtime/rsc-client-runtime.js"
      ]
    },
    "packages/create-rari-app": {
      "entry": [
        "src/**/*.ts"
      ],
      "project": [
        "src/**/*.ts"
      ]
    },
    "examples/app-router-example": {
      "entry": [
        "src/app/**/*.{ts,tsx}"
      ],
      "project": [
        "src/**/*.{ts,tsx}"
      ],
      "ignore": [
        "src/proxy.ts"
      ],
      "ignoreDependencies": [
        "@tailwindcss/vite",
        "tailwindcss"
      ]
    },
    "web": {
      "entry": [
        "src/app/**/*.{ts,tsx}"
      ],
      "project": [
        "src/**/*.{ts,tsx}"
      ],
      "ignore": [
        "src/proxy.ts"
      ],
      "ignoreDependencies": [
        "@tailwindcss/vite",
        "tailwindcss"
      ]
    }
  }
}
